<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Altea{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('build/main.css') }}" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('build/main.js') }}"></script>
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        {#<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>#}
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}

        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    {% endblock %}
</head>

<body>
<nav class="navbar navbar-default navbar-fixed-top header-navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand  header-text" href="{{ path('jobnow_home') }}">{{ 'header.findjob'|trans }}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('search_page_offer') }}">{{ 'header.candidates.findJob'|trans }}</a></li>
                <li><a href="">{{ 'header.candidates.companies'|trans }}</a></li>

                {%  if (app.user.roles is defined) and ('ROLE_CANDIDATE' in app.user.roles) %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ 'header.candidates.title'|trans }}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('dashboard_candidate') }}">{{ 'header.candidates.dashboard'|trans }}</a></li>
                    </ul>
                </li>
                {% endif %}

                {%  if (app.user.roles is defined) and ('ROLE_EMPLOYER' in app.user.roles) %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ 'header.employers.title'|trans }}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('post_offer') }}">{{ 'header.employers.post'|trans }}</a></li>
                        <li><a href="{{ path('search_candidate') }}">{{ 'header.employers.findCandidate'|trans }}</a></li>
                        <li><a href="{{ path('jobnow_credit') }}">{{ 'header.employers.pricing'|trans }}</a></li>
                        <li><a href="{{ path('dashboard_employer') }}">{{ 'header.employers.dashboard'|trans }}</a></li>
                    </ul>
                </li>
                {% endif %}
            </ul>



            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                    {%  if (app.user.roles is defined) and ('ROLE_EMPLOYER' in app.user.roles) %}
                        <li class="navbar-brand header-text"><div class="credit-total">Credits : {{ app.user.employer.credit  }}</div></li>
                    {% endif %}

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">{{ app.user.username }}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{%  if (app.user.roles is defined) and ('ROLE_CANDIDATE' in app.user.roles) %}
                                            {{ path('edit_candidate') }}
                                        {% elseif 'ROLE_EMPLOYER' in app.user.roles %}
                                            {{ path('edit_employer') }}
                                        {% else %}
                                            {{ path('fos_user_profile_edit') }}
                                        {% endif %}">
                                    Profil</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                        </ul>
                    </li>
                {% else %}

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">{{ 'header.register'|trans }}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('create_employer') }}">{{ 'header.employers.register'|trans }}</a></li>
                            <li><a href="{{ path('create_candidate') }}">{{ 'header.candidates.register'|trans }}</a></li>
                        </ul>
                    </li>

                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'header.login.title'|trans }}</a></li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ 'header.language.title'|trans }}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">Français</a></li>
                        <li><a href="{{  path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'}))}}">English</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% block header %}
{% endblock %}

<nav class="navbar navbar-default navbar-fixed-bottom navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand header-text" href="#"> © 2017 Altea Immobilère. All rights reserved</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="#">À propos</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="">{{ 'header.about.faq'|trans }}</a></li>
                <li><a href="">{{ 'header.about.privacy'|trans }}</a></li>
                <li><a href="">{{ 'header.about.terms'|trans }}</a></li>

            </ul>

            <ul class="nav navbar-nav navbar-right"></ul>
        </div>
    </div>
</nav>



<div class="content-block">
    <div style="">
        {% block content %}
        {% endblock %}
    </div>
</div>

</body>
</html>