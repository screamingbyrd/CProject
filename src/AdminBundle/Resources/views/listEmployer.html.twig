{% extends "AppBundle::layout.html.twig" %}

{% block title %}
   Liste des employeurs - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">

        <h2> Liste des employeurs </h2>

        <table class="table table-bordered table-striped well">
            <tr>
                <th>Société</th>
                <th>Email</th>
                <th>Crédits</th>
                <th>Addresse</th>
                <th>Action(s)</th>
            </tr>

            {% for employer in employers %}
                <tr>
                    <td>
                        <a href="{{ path('dashboard_employer', { 'id': employer.employer.id }) }}">
                            {{ employer.employer.name }}
                        </a>
                    </td>
                    <td>{{ employer.email }}</td>

                    <td>{{ employer.employer.credit }}</td>
                    <td>{{ employer.employer.location }}</td>
                    <td>
                        <a href="{{ path('edit_employer', { 'id': employer.employer.id }) }}">
                            <button type="button" class="btn btn-primary">Editer</button>
                        </a>
                        <button class="modal-open btn btn-danger" data-href="{{ path('delete_employer', { 'id': employer.employer.id }) }}">
                            Supprimer
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Etes vous sûre de vouloir effacer cette employeur ?</h4>
                    </div>
                    <div class="modal-footer">
                        <a type="button" class="btn btn-default" id="modal-btn-yes">{{ 'yes'|trans }}</a>
                        <button type="button" class="btn btn-primary" id="modal-btn-no">{{ 'no'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(".modal-open").on("click", function(e){
                $('#modal-btn-yes').attr("href", $(this).data('href'));
                $("#mi-modal").modal('show');
            });

            $("#modal-btn-no").on("click", function(e){
                e.preventDefault();
                $("#mi-modal").modal('hide');
            });

            $("#payment-form_submit").on("click", function(){
                $("#mi-modal").modal('hide');
            });
        </script>

    </div>
{%  endblock %}