{% extends "AppBundle::layout.html.twig" %}

{% block title %}
   Liste des employeurs - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">

        <h2> Liste des employeurs </h2>

        <table class="table table-bordered table-striped well">
            <tr>
                <th>Société</th>
                <th>Email</th>
                <th>Crédits</th>
                <th>Addresse</th>
                <th>Action(s)</th>
            </tr>

            {% for employer in employers %}
                <tr>
                    <td>
                        <a href="{{ path('dashboard_employer', { 'id': employer.employer.id }) }}">
                            {{ employer.employer.name }}
                        </a>
                    </td>
                    <td>{{ employer.email }}</td>

                    <td>{{ employer.employer.credit }}</td>
                    <td>{{ employer.employer.location }}</td>
                    <td>
                        <a href="{{ path('edit_employer', { 'id': employer.employer.id }) }}">
                            <button type="button" class="btn btn-primary">Editer</button>
                        </a>
                        <a href="{{ path('delete_employer', { 'id': employer.employer.id }) }}">
                            <button type="button" class="btn btn-danger">Supprimer</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <h2> Liste des candidats </h2>

        <table class="table table-bordered table-striped well">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Action(s)</th>
            </tr>

            {% for candidate in candidates %}
                <tr>
                    <td>
                        <a href="{{ path('dashboard_candidate', { 'id': candidate.id }) }}">
                            {{ candidate.user.firstName }} {{ candidate.user.lastName }}
                        </a>
                    </td>
                    <td>{{ candidate.user.email }}</td>
                    <td>
                        <a href="{{ path('edit_candidate', { 'id': candidate.id }) }}">
                            <button type="button" class="btn btn-primary">Editer</button>
                        </a>
                        <a href="{{ path('delete_candidate', { 'id': candidate.id }) }}">
                            <button type="button" class="btn btn-danger">Supprimer</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <div>
            <a href="{{ path('featured_offer_page') }}">
                <button type="button" class="btn btn-primary">Featured offer</button>
            </a>
            <a href="{{ path('featured_employer_page') }}">
                <button type="button" class="btn btn-primary">Featured employer</button>
            </a>
        </div>
    </div>
{%  endblock %}