{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    {{ 'form.registration.title.candidate' | trans }} - {{ parent() }}
{% endblock %}


{% block body %}
    <div class="container container-edit jobnow-container">
        <div class="col-md-8">

            <h3 class="login-login-title">{{ 'form.registration.title.edit'|trans }}</h3>

            {% if completion < 100 %}
                <div class="completion-container">
                    {{ 'form.registration.complete'|trans }}
                    <div class="meter red">
                        <span class="completion-bar" style="width: {{ completion }}%"></span>
                    </div>
                </div>
            {% endif %}

            <div class="completion-success animated fadeIn">
                {{ 'form.registration.completed'|trans }}
            </div>

            {{ form_start(form, {'attr': {'class': 'form-vertical'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="row">

                    <div class="col-md-4 form-group">
                        {{ form_label (form.email,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.email , { 'attr': {'readonly':'readonly'} }) }}
                        {{ form_errors(form.email) }}
                    </div>


                    <div class="col-md-4 form-group">
                        {{ form_label (form.firstName,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.firstName) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.lastName,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.lastName) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                    <div class="col-md-12 form-group">
                        {{ form_label (form.title,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="col-md-12 form-group">
                        {{ form_label (form.description,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.description, { 'attr': {'class':'edit-text'} }) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="col-md-2 form-group">
                        {{ form_label (form.age,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.age) }}
                        {{ form_errors(form.age) }}
                    </div>
                    <div class="col-md-2 form-group">
                        {{ form_label (form.experience,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.experience) }}
                        {{ form_errors(form.experience) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.license,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.license) }}
                        {{ form_errors(form.license) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.language,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.language) }}
                        {{ form_errors(form.language) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.diploma,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.diploma) }}
                        {{ form_errors(form.diploma) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.socialMedia,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.socialMedia) }}
                        {{ form_errors(form.socialMedia) }}
                    </div>
                    <div class="col-md-4 form-group">
                        {{ form_label (form.phone,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.phone) }}
                        {{ form_errors(form.phone) }}
                    </div>
                    <div class="col-md-6 form-group">
                        {{ form_label (form.searchedtag,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.searchedtag) }}
                        {{ form_errors(form.searchedtag) }}
                    </div>
                    <div class="col-md-6 form-group">
                        {{ form_label (form.tag,null, { 'label_attr': {'class': 'label-form'} }) }}
                        {{ form_widget(form.tag) }}
                        {{ form_errors(form.tag) }}
                    </div>
                <div class="col-md-4 col-md-offset-4">
                    {{ form_widget(form.submit, { 'label': 'offer.submit' }) }}
                </div>
                {# Génération automatique des champs pas encore écrits.
                   Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                   et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
            <button class="btn btn-default" id="btn-confirm">{{ 'candidate.delete.delete'|trans }}</button>

            <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'candidate.delete.sure'|trans }}</h4>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" id="modal-btn-yes">{{ 'yes'|trans }}</button>
                            <button type="button" class="btn btn-primary" id="modal-btn-no">{{ 'no'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        $('input, textarea').each(function(){
            if($(this).attr('id') != 'appbundle_candidate__token'){
                if( !$(this).val().length ) {
                    $(this).addClass('empty');
                    $(this).removeClass('not-empty');
                } else {
                    $(this).addClass('not-empty');
                    $(this).removeClass('empty');
                }
            }

        });
        $('input, textarea').blur(function()
        {
            let empty = $('.empty').length;
            let full = $('.not-empty').length;
            if( !$(this).val().length ) {
                $(this).addClass('empty');
                $(this).removeClass('not-empty');
            } else {
                $(this).addClass('not-empty');
                $(this).removeClass('empty');
            }
            empty = $('.empty').length;
            full = $('.not-empty').length;
            let percent = full / (full + empty) * 100;
            $('.completion-bar').animate({'width' :percent + '%'});
            console.log(percent);
            if(percent >= 100){
                $('.completion-container').fadeOut("slow", function () {
                    $(this).css({display:"none"});
                    $('.completion-success').css({'display' :'block'});
                });
            }else{
                $('.completion-container').css({'display' :'block'});
                $('.completion-success').css({'display' :'none'});
            }
        });
        $('select').on("change", function(e) {
            if($(this).val().length != 0){
                $(this).addClass('not-empty');
                $(this).removeClass('empty');
            }else{
                $(this).addClass('empty');
                $(this).removeClass('not-empty');
            }
            let empty = $('.empty').length;
            let full = $('.not-empty').length;
            let percent = full / (full + empty) * 100;
            $('.completion-bar').animate({'width' :percent + '%'});
            if(percent >= 100){
                $('.completion-container').fadeOut("slow", function () {
                    $(this).css({display:"none"});
                    $('.completion-success').css({'display' :'block'});
                });
            }else{
                $('.completion-container').css({'display' :'block'});
                $('.completion-success').css({'display' :'none'});
            }
        });

        $("#btn-confirm").on("click", function(e){
            e.preventDefault();
            $("#mi-modal").modal('show');
        });

        $("#modal-btn-yes").on("click", function(){
            window.location.replace("{{ path('delete_candidate') }}");
        });

        $("#modal-btn-no").on("click", function(){
            $("#mi-modal").modal('hide');
        });

    </script>
{% endblock %}