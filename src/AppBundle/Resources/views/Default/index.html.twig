{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="jumbotron homepage-jumbotron">
        <h2>Estimer votre bien</h2>
        <div class="col-md-6">
            <div class="jobnow-container">
                <div class="jobnow-description">
                    <a href="#" class="jobnow-button homepage-button">Post offer</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="jobnow-container">
                <div class="jobnow-description">
                    <div class="jobnow-description homepage-button">
                        <a href="#" class="jobnow-button homepage-button">Estimate</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 post-homepage ">
            <div class="jobnow-container">
                <div class="jobnow-description">
                    <div style="display: -webkit-inline-box;">
                        <img class="about-us-icon" src="{{asset('images/house.svg')}}"><h3>Submit your offer</h3>
                    </div>
                    <p>{{ 'homepage.ourMission' |trans}}</p>
                    <div class="process-block">
                        <div class="number-process">1</div>
                        <div>Post an offer</div>
                    </div>
                    <div class="process-block"><i class="fas fa-list-ul"></i></div>
                    <div class="process-block">
                        <div class="number-process">3</div>
                        Accept to sell it
                    </div>
                    <div class="process-block"><i class="fas fa-trophy"></i></div>
                </div>
            </div>
        </div>
        <div class="estimate-homepage col-md-6">
            <div class="jobnow-container">
                <div class="jobnow-description">
                    <div style="display: -webkit-inline-box;">
                        <img class="about-us-icon" src="{{asset('images/tag.svg')}}"><h3>Gagner une commission en estimant le prix</h3>
                    </div>
                    <p>{{ 'homepage.ourMission' |trans}}</p>
                    <div class="process-block"><i class="fas fa-file"></i></div>
                    <div class="process-block">
                        <div class="number-process">2</div>
                        Evaluate the price of the offer
                    </div>
                    <div class="process-block"><i class="fas fa-check"></i></div>
                    <div class="process-block">
                        <div class="number-process">4</div>
                        The closest win something
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="jumbotron">
        <div style="display: -webkit-inline-box;">
            <img class="about-us-icon" src="{{asset('images/search.svg')}}"><h3>{{ 'header.about.title'|trans }}</h3>
        </div>
        <p>{{ 'homepage.ourMission' |trans}}</p>
    </div>
    {% if ads is not empty %}
        <div class="container jobnow-container container">
            <h1 class="featured-offer text-center">{{ 'homepage.ourPartners'|trans }}</h1>
            <ul class="ads-list-hompeage" id="myUL">
                {% for ad in ads %}
                <li class="search-result animated fadeIn">
                    <a class='offer-element ad' href="{{ ad.link }}" target="_blank">
                        {% if ads[0].description is not null and ad.link is not empty %}
                            {% set image =  'uploads' ~ vich_uploader_asset(ad.coverImage, 'imageFile', 'AppBundle\\Entity\\Image') %}
                            <div class="background-proposer-in-offer-search" style="background-repeat: no-repeat;background-size: cover;background-image: url({{asset(image)}});">
                                <div class="layer layer-offer-element animated">
                                </div>
                            </div>
                            {% if ad.logo.imageName is not null %}<img class="logo-proposer-in-offer-search" src="{{asset('uploads' ~ vich_uploader_asset(ad.logo, 'imageFile', 'AppBundle\\Entity\\Image')) }}"/>{% endif %}
                            <div class="offer-search-element">
                                <div class="offer-element-details">
                                    <div class="offer-element-name">{{ ad.title }}</div>
                                    <div class="offer-element-title">{{ ad.description}}</div>
                                </div>
                            </div>
                        {% else %}
                            {% set image =  'uploads' ~ vich_uploader_asset(ads[adOrder].coverImage, 'imageFile', 'AppBundle\\Entity\\Image') %}
                            <div class="background-proposer-in-offer-search" style="width: 100% !important;background-repeat: no-repeat;background-size: cover;background-image: url({{asset(image)}});"></div>
                        {% endif %}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}


    <style>
        .row{
            margin-right: 0 !important;
            margin-left: 0 !important;
        }
        .ads-list-hompeage{
            list-style-type: none;
            margin-top: 20px;
        }
        .about-us-icon{
            width: 70px;
            margin-right: 20px;
            margin-bottom: 20px;
        }
        .jobnow-description{
            color: white;
            margin-top: 60px;
            margin-bottom: 60px;
            text-align: center;
            margin-right: 50px;
            margin-left: 50px;
        }
        .post-homepage{
            background-color: #0d67bf;
        }
        .estimate-homepage{
            background-color: white;
        }
        .estimate-homepage .jobnow-description{
            color: #0d67bf;
        }

        .homepage-href-row{
            padding: 10px;
            padding-right: 25px;
            font-size:20px;
        }
        .homepage-href-tag{
            text-decoration: none !important;
        }
        .homepage-jumbotron::after{
            content: '';
            background-image:url({{asset('images/jobnow-home.jpg')}});
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position:absolute;
            z-index: -1;
        }
        .homepage-jumbotron{
            margin-bottom: 0 !important;
            padding: 141px 0 !important;
        }
        .homepage-button{
            min-width: 150px;
            font-size: 20px;
        }
        .process-block{
            display: flex;
            height: 115px;
            align-items: center;
            justify-content: center;
        }
        .process-block .fas{
            font-size: 25px;
        }
        .number-process{
            border-radius: 50%;
            width: 42px;
            height: 42px;
            padding: 8px;
            border: 2px solid;
            text-align: center;
            font: 21px Arial, sans-serif;
            margin-right: 20px;
        }
        .about-us-container{
            background-color: black;
            color: white;
            padding-top: 60px;
            padding-bottom: 60px;
            text-align: center;
            padding-right: 50px;
            padding-left: 50px;
        }
         .jumbotron::after{
             content: '';
             background-image:url({{asset('images/jobnow-home.jpg')}});
             background-size: cover;
             background-repeat: no-repeat;
             width: 100%;
             height: 100%;
             top: 0;
             left: 0;
             position:absolute;
             z-index: -1;
         }
    </style>

{% endblock %}




