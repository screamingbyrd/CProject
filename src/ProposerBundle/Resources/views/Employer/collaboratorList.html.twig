{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    {{ 'proposer.addCollaborator.list'|trans }}
{% endblock %}

{% block body %}
    {%  if (app.user.roles is defined) and ('ROLE_EMPLOYER' in app.user.roles) %}
        <a href="{{ path('dashboard_proposer') }}" class="btn btn-primary return-to-dashboard">{{ 'dashboard.proposer.return' | trans }}</a>
    {% endif %}
    <div class="container">
        <a class="btn btn-primary" href="{{ path('add_collaborator') }}">{{ 'proposer.addCollaborator.title'|trans }}</a>

        <h2>{{ 'proposer.addCollaborator.list'|trans }}</h2>

        <table class="table table-bordered table-striped well">
            <tr>
                <th>{{ 'form.registration.email'|trans }}</th>
                <th>{{ 'proposer.addCollaborator.access.title'|trans }}</th>
                <th>{{ 'dashboard.action'|trans }}</th>
            </tr>

            {% for collaborator in collaborators %}
                <tr>
                    <td>{{ collaborator.username }}</td>
                    <td>{% if collaborator.main %}{{ 'proposer.addCollaborator.access.total'|trans }}{% else %}{{ 'proposer.addCollaborator.access.simple'|trans }}{% endif %}</td>
                    <td>
                        <a href="{{ path('archive_collaborator', { 'id': collaborator.id }) }}">
                            <button type="button" class="btn btn-danger">{{ 'dashboard.proposer.archiveOffer'|trans }}</button>
                        </a>
                        <a href="{{ path('change_access_collaborator', { 'id': collaborator.id }) }}">
                            <button type="button" class="btn btn-primary">{{ 'proposer.addCollaborator.access.changeAccess'|trans }}</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>
{%  endblock %}