        </div>
        <div class="row">
            <div class="col-md-10">
                <h1>{{ employer.name }} {{ 'employer.show.title'|trans }}</h1>
                <hr>
                <p>{{ employer.description }}</p>
                <h3>{{ 'employer.show.whyus'|trans }}</h3>
                <p>{{ employer.whyUs }}</p>
            </div>
            <div class="col-md-2">
                <h3 class="well well-sm">{{ 'employer.show.lastoffers'|trans }}</h3>
                <ul>
                    <li>INSERT LAST OFFERS HERE</li>
                    <li>INSERT LAST OFFERS HERE</li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                {{ dump(status) }}

                {{ ivory_google_map(map) }}
                {{ ivory_google_api([map]) }}

            </div>
            <div class="col-md-2">
                <h3 class="well well-sm">{{ 'employer.show.tags'|trans }}</h3>
                <ul>
                    <li>INSERT MAIN TAGS</li>
                    <li>INSERT MAIN TAGS</li>
                </ul>
            </div>

        </div>
    </div>

{% endblock %}