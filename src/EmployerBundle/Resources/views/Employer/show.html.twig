{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    {{ employer.name }} - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row well" style="background-repeat: no-repeat;background-size: cover;background-image: url('/jobnowlu/web/uploads{{ vich_uploader_asset(employer.coverImage, 'imageFile', 'AppBundle\\Entity\\Image') }}');">
            <img src="/jobnowlu/web/uploads{{ vich_uploader_asset(employer.logo, 'imageFile', 'AppBundle\\Entity\\Image') }}" height="250" width="250"/>
        </div>
        <div class="row">
            <div class="col-md-10">
                <h1>{{ employer.name }} {{ 'employer.show.title'|trans }}</h1>
                <hr>
                <p>{{ employer.description }}</p>
                <h3>{{ 'employer.show.whyus'|trans }}</h3>
                <p>{{ employer.whyUs }}</p>
            </div>
            <div class="col-md-6">
                <!--{{ dump(status) }}-->

                {{ ivory_google_map(map) }}
                {{ ivory_google_api([map]) }}

            </div>
            <div class="col-md-4 last-offers">
                <div class="article-title">{{ 'employer.show.lastoffers'|trans }}</div>
                <ul class="last-job-list">
                    <li>
                        <a class="link-offer-employer" href="{{ path('featured_offer_page') }}">
                            <div class="slide-button">
                                <div><b>{{ offers[0].title }}</b></div>
                                <div class="job-meta"><span>{{ offers[0].contractType.name |trans }}</span> - <span>{{ offers[0].location }}</span></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a class="link-offer-employer" href="{{ path('featured_offer_page') }}">
                            <div class="slide-button">
                                <div><b>{{ offers[1].title }}</b></div>
                                <div class="job-meta"><span>{{ offers[1].contractType.name |trans }}</span> - <span>{{ offers[1].location }}</span></div>
                            </div>
                        </a>
                    </li>
                </ul>
                <a class="job-see-all">Toute nos offres</a>
            </div>
        </div>
        <style>
            .article-title{
                position: relative;
                margin: 0;
                padding: 0 0 10px;
                font-weight: 400;
                font-size: 20px;
                line-height: 26px;
                color: #373942;
            }
            .last-offers{
                padding: 20px;
                background: #ffffff;
                border: black solid 1px ;
            }
            .last-job-list{
                list-style: none;
                padding: 0;
            }
            .job-meta{
                list-style: none;
                padding: 0;
            }
            .link-offer-employer{
                display: block;
                padding: 15px 0;
                line-height: 24px;
                font-size: 16px;
                position: relative;
                overflow: hidden;
                z-index: 1;
                text-decoration: none !important;
                cursor: pointer;
                color: #333;
                -webkit-transition: ease-out 0.7s;
                -moz-transition: ease-out 0.7s;
                transition: ease-out 0.7s;
            }
            .link-offer-employer:hover {
                background-color: #e8f0f0;
            }
            .slide-button {
                -webkit-transition: ease-out 0.7s;
                -moz-transition: ease-out 0.7s;
                transition: ease-out 0.7s;
            }
            .slide-button:hover {
                transform: translate(0.5em,0);
            }
            .job-see-all{
                color: #fbfef5;
                border-radius: 0px;
                padding: 18px 19px;
                display: inline-block;
                font-size: 12px;
                letter-spacing: 1px;
                cursor: pointer;
                background: #f45721;
                box-shadow: inset 0 0 0 0 #d84a24;
                -webkit-transition: ease-out 0.4s;
                -moz-transition: ease-out 0.4s;
                transition: ease-out 0.4s;
                width: 100%;
                text-align: center;
                text-decoration: none !important;
                margin-top: -10px;
            }
            .job-see-all:hover{
                box-shadow: inset 400px 0 0 0 #ff6940;
                color: white;
            }
        </style>

    </div>

{% endblock %}