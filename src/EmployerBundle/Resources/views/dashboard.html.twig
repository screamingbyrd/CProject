{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Register - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="jumbotron homepage-jumbotron">
        <h2>{{ 'dashboard.title' | trans }}</h2>
    </div>

    <div class="container jobnow-container" style="text-align: center">

        <div class="dashboard-container">
            <div class="container-square">
                <a class="zoom block-dashboard square-profile" href="{{ path('show_employer', {'id':employer.id}) }}"><div class="content-square"><i class="fas fa-user"></i><div class="text-square">{{ 'dashboard.employer.watchProfile' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-offers" href="{{ path('employer_offers') }}"><div class="content-square"><i class="fas fa-list-ul"></i><div class="text-square">{{ 'dashboard.employer.myOffers' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-credit" href="{{ path('jobnow_credit') }}"><div class="content-square"><i class="fas fa-shopping-cart"></i><div class="text-square">{{ 'employer.credit.buy' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-featured-offers" href="{{ path('featured_offer_page') }}"><div class="content-square"><i class="far fa-calendar-alt"></i><div class="text-square">{{ 'featured.offer.title' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-bills" href="{{ path('featured_offer_page') }}"><div class="content-square"><i class="fas fa-file"></i><div class="text-square">{{ 'dashboard.employer.myBills' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-post" href="{{ path('post_offer') }}" ><div class="content-square"><i class="fas fa-clipboard"></i><div class="text-square">{{ 'header.employers.post' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-contact" href="{{ path('contact_us_page') }}"><div class="content-square"><i class="fas fa-headphones"></i><div class="text-square">{{ 'contact.us.employer'|trans }}</div></div></a>
                <a class="zoom block-dashboard square-featured-employers" href="{{ path('featured_employer_page') }}"><div class="content-square"><i class="far fa-calendar-alt"></i><div class="text-square">{{ 'featured.employer.title' | trans }}</div></div></a>
            </div>
        </div>

    </div>
    <style>
        .square-offers{
            background-color: #ff9c07;
        }
        .square-profile{
            background-color: #fd8f14;
        }
        .square-post{
            background-color: #ffb12d;
        }
        .square-credit{
            background-color: #ff9e00;
        }
        .square-featured-employers{
            background-color: #ffc443;
        }
        .square-featured-offers{
            background-color: #ffaa00;
        }
        .square-bills{
            background-color: #ffa334;
        }
        .square-contact{
            background-color: #ffb731;
        }
        .container-square{
            position: relative;
            left: 0px;
            top: 0px;
            height: auto;
            width: 100%;
            float: left;
            padding: 0px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .text-square{
            margin-top: 10px;
        }
        .block-dashboard {
            position: relative;
            height: 0;
            width: 15%;
            padding-bottom: 15%;
            float: left;
            border: 1px #ddd solid;
            margin: 3%;
            color: black;
            text-decoration: none;
            border-radius: 5px;
            webkit-box-shadow: 2px 5px 20px rgba(0,0,0,0.1);
            -moz-box-shadow: 2px 5px 20px rgba(0,0,0,0.1);
            box-shadow: 2px 5px 20px rgba(0,0,0,0.1);
            -webkit-transition: -webkit-transform 0.5s cubic-bezier(0.9, 0.26, 0.58, 1) false;
            -moz-transition: -moz-transform 0.5s cubic-bezier(0.9, 0.26, 0.58, 1) false false;
            -o-transition: -o-transform 0.5s cubic-bezier(0.9, 0.26, 0.58, 1) false false;
        }
        .block-dashboard:hover{
            color: black;
        }
        .content-square {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            height: auto;
            width: 100%;
            float: left;
            padding: 20px;
            margin: 0;
        }
        .content-square i{
            font-size: 28px;
            margin-bottom: 5px;
        }
        .homepage-jumbotron{
            padding: 63px 0 !important;
        }
        .homepage-jumbotron::after{
            content: '';
            background-image:url({{asset('images/dashboard.jpg')}});
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position:absolute;
            z-index: -1;
        }
    </style>

{% endblock %}