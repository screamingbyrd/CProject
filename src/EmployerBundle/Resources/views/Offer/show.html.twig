{% extends "::layout.html.twig" %}


{% block content %}

    <div class="candidate-header">
        <h2 class="page-title candidate-name">{{ offer.title }}</h2>
        <h3 class="page-subtitle">
            <div class="job-title">offer.location</div>
            <div class="updated-date">Post√©e le {{ offer.creationDate |date('Y-m-d')}}</div>

        </h3>
    </div>
    <style>
        .candidate-header{
            text-align: center;
            overflow: hidden;
            padding: 20px 0;
            background: transparent;
            border-bottom: 1px solid rgba(204,204,204,.41);
            margin-bottom: 30px;
            display: block;
            position:relative;

        }
        .candidate-header::after{
            opacity:0.3;
            content: '';
            background-image:url({{asset('images/candidate.jpg')}});
            background-size: 100% 350px;
            background-repeat: no-repeat;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position:absolute;
            z-index: -1;
        }
        .page-subtitle{
            text-align: center;
            font-size: 18px;
        }
        .job-title, .updated-date{
            display: inline-block;
            padding: 20px;
        }
        .candidate-body{
            text-align: center;
            height:  300px;
        }
        .nav-candidate{
            display: inline-block;
        }
        .candidate-content{
            display: inline-flex;
            width: 80%;
        }
        .nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover{
            color: #ea3222;
            background-color: #fff;
        }
        .candidate-action{
            text-align: center;
        }
        .link-social{
            display: inline-block;
            padding: 20px;
        }
        .contact-button{
            color: #ea3222;
            background-color: #fff;

        }
    </style>


    <div class="container candidate-body">
        <ul class="nav nav-pills nav-candidate">
            <li class="active">
                <a  href="#1" data-toggle="tab">Description</a>
            </li>
            <li><a href="#2" data-toggle="tab">Experience</a>
            </li>
            <li><a href="#3" data-toggle="tab">Autre</a>
            </li>
        </ul>

        <div class="tab-content candidate-content">
            <div class="tab-pane active" id="1">
                <h3>{{ offer.description }}</h3>
            </div>
            <div class="tab-pane" id="2">
                <h3>{{ offer.experience }}</h3>
            </div>
            <div class="tab-pane" id="3">
            </div>
        </div>
    </div>

    <hr>
    </div>


{% endblock %}